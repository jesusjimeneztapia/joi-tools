{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["plugin:@typescript-eslint/recommended", "plugin:prettier/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2023,
    "sourceType": "commonjs",
    "tsconfigRootDir": "__dirname"
  },
  "plugins": ["prettier"],
  "root": true,
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto",
        "printWidth": 100
      }
    ]
  },
  "ignorePatterns": ["node_modules", "lib"]
}
