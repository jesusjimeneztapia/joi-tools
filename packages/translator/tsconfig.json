{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "removeComments": false,
    "types": ["vitest/globals"],
    "baseUrl": "src",
    "paths": {
      "@messages/*": ["messages/*"],
      "@translations/*": ["translations/*"],
      "@lang/*": ["lang/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "test"]
}
